# Bematore Payment System Environment Configuration
# Template file - Copy to .env and configure with your values
# Developed by Brandon Ochieng - Bematore Technologies

# Django Core Settings
SECRET_KEY=your-super-secret-django-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,payments.bematore.com

# Database Configuration - MySQL for cPanel deployment
DB_NAME=your_database_name
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_HOST=localhost
DB_PORT=3306

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_PATH=firebase-adminsdk.json

# M-Pesa Daraja API Configuration
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_BUSINESS_SHORTCODE=your_business_shortcode
MPESA_PASS_KEY=your_mpesa_pass_key
MPESA_CALLBACK_URL=https://your-domain.com/api/v1/callbacks/mpesa/
MPESA_TIMEOUT_URL=https://your-domain.com/callbacks/mpesa/timeout/

# Flutterwave Configuration
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_ENCRYPTION_KEY=your_flutterwave_encryption_key
FLUTTERWAVE_ENVIRONMENT=test

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-app.com,https://your-domain.com
CORS_ALLOW_CREDENTIALS=True

# Currency & Exchange Configuration
DEFAULT_CURRENCY=USD
DISPLAY_FALLBACK_CURRENCY=KES
KES_EXCHANGE_RATE=147.50
EUR_EXCHANGE_RATE=0.85
GBP_EXCHANGE_RATE=0.73

# Payment Limits & Timeouts
MINIMUM_PAYMENT_AMOUNT=1.0
MAXIMUM_PAYMENT_AMOUNT=10000.0
PAYMENT_TIMEOUT_SECONDS=300

# Admin Configuration
ADMIN_URL=admin/

# Logging Configuration
LOG_LEVEL=INFO

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (Optional - for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Configuration (Production Settings)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Flutter App Integration URLs
FLUTTER_APP_URL=https://your-app.com
FLUTTER_SUCCESS_URL=https://your-app.com/payment-success
FLUTTER_FAILURE_URL=https://your-app.com/payment-failure
FLUTTER_CANCEL_URL=https://your-app.com/payment-cancel